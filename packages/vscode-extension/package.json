{
  "name": "devhub",
  "displayName": "DevHub - Developer Mission Control",
  "description": "Manage microservices, Docker, environment variables, and documentation from within VSCode",
  "version": "2.0.0",
  "publisher": "devhub",
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "microservices",
    "docker",
    "developer-tools",
    "devops",
    "productivity"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "devhub.openPanel",
        "title": "DevHub: Open Dashboard",
        "icon": "$(server)"
      },
      {
        "command": "devhub.scanRepos",
        "title": "DevHub: Scan Workspace for Repositories"
      },
      {
        "command": "devhub.createSnapshot",
        "title": "DevHub: Create Quick Snapshot"
      },
      {
        "command": "devhub.startService",
        "title": "Start Service",
        "icon": "$(debug-start)"
      },
      {
        "command": "devhub.stopService",
        "title": "Stop Service",
        "icon": "$(debug-stop)"
      },
      {
        "command": "devhub.showServiceDetails",
        "title": "Show Details",
        "icon": "$(info)"
      },
      {
        "command": "devhub.activateWorkspace",
        "title": "Activate Workspace",
        "icon": "$(check)"
      },
      {
        "command": "devhub.restoreSnapshot",
        "title": "Restore Snapshot",
        "icon": "$(history)"
      },
      {
        "command": "devhub.refreshServices",
        "title": "Refresh Services",
        "icon": "$(refresh)"
      },
      {
        "command": "devhub.refreshWorkspaces",
        "title": "Refresh Workspaces",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "devhub",
          "title": "DevHub",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "devhub": [
        {
          "id": "devhubServices",
          "name": "Services",
          "icon": "$(server)",
          "contextualTitle": "DevHub Services"
        },
        {
          "id": "devhubWorkspaces",
          "name": "Workspaces",
          "icon": "$(folder)",
          "contextualTitle": "DevHub Workspaces"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "devhub.refreshServices",
          "when": "view == devhubServices",
          "group": "navigation"
        },
        {
          "command": "devhub.refreshWorkspaces",
          "when": "view == devhubWorkspaces",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "devhub.startService",
          "when": "view == devhubServices && viewItem == serviceStopped",
          "group": "inline"
        },
        {
          "command": "devhub.stopService",
          "when": "view == devhubServices && viewItem == serviceRunning",
          "group": "inline"
        },
        {
          "command": "devhub.showServiceDetails",
          "when": "view == devhubServices && viewItem =~ /service/",
          "group": "navigation"
        },
        {
          "command": "devhub.activateWorkspace",
          "when": "view == devhubWorkspaces && viewItem == workspaceInactive",
          "group": "inline"
        },
        {
          "command": "devhub.restoreSnapshot",
          "when": "view == devhubWorkspaces && viewItem == snapshot",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "DevHub",
      "properties": {
        "devhub.autoStartServices": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start services when workspace opens"
        },
        "devhub.scanDepth": {
          "type": "number",
          "default": 3,
          "description": "Maximum depth for repository scanning"
        },
        "devhub.logRetentionDays": {
          "type": "number",
          "default": 7,
          "description": "Number of days to keep service logs"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run build:webview && npm run build:extension",
    "build:extension": "tsc -p ./",
    "build:webview": "cd webview-ui && npm run build",
    "watch": "tsc -watch -p ./",
    "watch:webview": "cd webview-ui && npm run dev",
    "package": "npm run build && vsce package",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "@devhub/core": "*",
    "@devhub/shared": "*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.3.3"
  }
}
